<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j=
              "http://jakarta.apache.org/log4j/"
               debug="false">
 
   <appender name="console"
      class="org.apache.log4j.ConsoleAppender">
      <param name="Threshold" value="DEBUG" />
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d %p [%c:%L] - &lt;%m&gt;%n" />
      </layout>
   </appender>

   <appender name="everythingDailyAppender"
           class="org.apache.log4j.DailyRollingFileAppender">
      <param name="Threshold" value="DEBUG" />
      <param name="File" value="C:/podcastpedia/logs/batch/everything.log"/>
      <layout class="org.apache.log4j.PatternLayout">
         <param name="ConversionPattern" value="%d %p [%c:%L] - &lt;%m&gt;%n" />
      </layout>
   </appender>

   <appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
		<param name="BufferSize" value="150"/>
		<appender-ref ref="everythingDailyAppender"/>
		<appender-ref ref="console"/>
   </appender>
     
   <logger name="org.podcastpedia.batch"  additivity="false">
      <level value="DEBUG" />
      <appender-ref ref="ASYNC"/>                
   </logger>
      
    <root>
	  <priority value="DEBUG"/>           
	</root>
</log4j:configuration>